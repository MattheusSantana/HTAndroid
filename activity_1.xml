<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="18dp"
    android:background="@color/dim_foreground_disabled_material_dark">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fabrica de Programador"
        android:textSize="30dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/title"
        android:hint="Nome" />


    <EditText
        android:id="@+id/edtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edtNome"
        android:hint="Login" />


    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edtLogin"
        android:hint="Email" />


    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edtEmail"
        android:hint="Senha" />

    <Button
        android:id="@+id/btSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Sair"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:textStyle="bold"
        android:background="@color/switch_thumb_disabled_material_light" />

    <Button
        android:id="@+id/btCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btSair"
        android:text="Cadastrar"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:textStyle="bold"
       android:background="@color/switch_thumb_disabled_material_light"/>


</RelativeLayout>